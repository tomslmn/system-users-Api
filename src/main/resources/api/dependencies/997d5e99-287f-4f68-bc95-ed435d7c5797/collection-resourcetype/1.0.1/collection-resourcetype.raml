#%RAML 1.0 ResourceType  
usage: Use this to describe resource that list items 
description: A collection of <<resourcePathName>>. Collection items allow get and post but not put or delete
get?:
  responses:
    500:
      description: |
            An Internal Server Error has occurred. 
            Refer to the accompanying error message for further details.
      body:
        application/json:
          type: <<errorResponse>>
    502:
      description: |
            Bad Gateway. 
            Problem communicating with or an error has been returned from a downstream endpoint.
            Refer to the accompanying error message for further details.
      body:
        application/json:
         type: <<errorResponse>>
    504:
      description: |
            Gateway Timeout.
            Timeout communicating with a downstream endpoint 
            Refer to the accompanying error message for further details.
      body:
        application/json:
          type: <<errorResponse>>
    404:
      description: |
            The URI requested is invalid or the resource requested does not exist.
            Refer to the accompanying error message for further details.
      body:
        application/json:
          type: <<errorResponse>>
    403:
      description: |
            The request is understood, but it has been refused or access is not allowed.  
            Refer to the accompanying error message for further details.
      body:
        application/json:
          type: <<errorResponse>>      
    401:
      description: |
            Requestor is not authorised to perform this action.
      body:
        application/json:
          type: <<errorResponse>>
    400:
      description: |
            Request is invalid.
            Refer to the accompanying error message for further details.
      body:
        application/json:
          type: <<errorResponse>>
    200:
      description: |
            Successfully retrieved all <<resourcePath>>. 
      body:
        application/json:
          type: <<resourcePathName | !singularize>> []
post?:
  body:
    application/json:
      type: <<resourcePathName | !singularize>> []
  responses:
    500:
      description: |
            An Internal Server Error has occurred. 
            Refer to the accompanying error message for further details.
      body:
        application/json:
